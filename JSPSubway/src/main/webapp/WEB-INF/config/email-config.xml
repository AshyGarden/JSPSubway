<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 이메일 인증 관련 bean등록 -->
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
	<!--<property name="host" value="smtp.naver.com"/> 
		<property name="port" value="465"/> -->
		<!-- smtp.naver.com 465  -->

		<property name="host" value="smtp.gmail.com"/> <!-- smtp.gmail.com -->
		<property name="port" value="587"/><!--  587  -->
		<property name="username" value="${email.account}"/>
		<property name="password" value="${email.password}"/>
		
		<property name="javaMailProperties">
			<props>
 				<prop key="mail.smtp.starttls.enable">true</prop> <!-- google -->
                <!-- <prop key="mail.smtp.ssl.enable">true</prop> naver  -->
                <prop key="mail.smtp.auth">true </prop>
                <prop key="mail.transport.protocol">smtp</prop>
                <prop key="mail.debug">true</prop>
                <prop key="mail.smtps.ssl.trust">*</prop>
                <prop key="mail.smtp.ssl.protocols">TLSv1.2</prop>
			</props>
		</property>
	</bean>



</beans>